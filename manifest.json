{
  "description": "Changes Youtube's likes bar palette into green/red.",
  "manifest_version": 2,
  "name": "Colorful likes bar for YouTubeâ„¢",
  "version": "1.2",
  "homepage_url": "https://github.com/xatok/colorful-likes-bar-for-youtube",
  "page_action": {
    "browser_style": true
  },

  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions": [
    "tabs",
    "webNavigation",
    "*://www.youtube.com/*"
  ],

  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["*://www.youtube.com/*"],
      "css" : ["/css/content-style.css"]
    }
  ]

}
